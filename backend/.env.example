# Server Configuration
PORT=8080
ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=studyplatform

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_AVATARS=user-avatars
MINIO_BUCKET_MATERIALS=materials
MINIO_BUCKET_TEMP=temp-uploads

# Logging
LOG_LEVEL=info

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://localhost:8081
ROOM_SERVICE_URL=http://localhost:8082
SESSION_SERVICE_URL=http://localhost:8083
CONTENT_SERVICE_URL=http://localhost:8084
REALTIME_SERVICE_URL=http://localhost:8085
ANALYTICS_SERVICE_URL=http://localhost:8086

# API Gateway
GATEWAY_PORT=8080
